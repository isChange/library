<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.igeek.library.mapper.ClassInfoMapper" >

    <select id="findClassInfoById" resultType="com.igeek.library.entity.ClassInfo">
        select `class_name` from `class_info` where  `class_id` = #{id}
    </select>
    <select id="findAll" resultType="com.igeek.library.entity.ClassInfo">
        select * from `class_info`
    </select>
</mapper>